{% if vault_config.tls_disable == True %}
listener "tcp" {
  address     = "{{ vault_config.client_addr }}:{{ vault_config.http_port }}"
  tls_disable = "{{ vault_config.tls_disable }}"
}
{% else %}
listener "tcp" {
  address       = "{{ vault_config.client_addr }}:{{ vault_config.http_port }}"
  tls_cert_file = "{{ vault_home_directory }}/certs/{{ vault_config.tls_cert_file }}"
  tls_key_file  = "{{ vault_home_directory }}/certs/{{ vault_config.tls_key_file }}"
}
{% endif %}

{% if vault_config.storage == "raft" %}
storage "raft" {
  path = "{{ vault_data_directory }}/raft"
  node_id = "{{ ansible_hostname }}"

{% for host in groups['vault'] if not host == ansible_fqdn %}
  retry_join {
{% if vault_config.tls_disable == True %}
    leader_api_addr = "http://{{ host }}:{{ vault_config.http_port }}"
{% else %}
    leader_api_addr = "https://{{ host }}:{{ vault_config.http_port }}"
{% endif %}
  }
{% endfor %}
}

{% elif vault_config.storage == "consul" %}
storage "consul" {
  address = "127.0.0.1:8500"
  path = "vault"
}
{% else %}
storage "file" {
  path = "{{ vault_data_directory }}/data"
}
{% endif %}

{% if seal.type == "gcpkms" %}
seal "gcpckms" {
  project     = "{{ seal.project }}"
  region      = "{{ seal.region }}"
  key_ring    = "{{ seal.key_ring }}"
  crypto_key  = "{{ seal.crypto_key }}"
}
{% endif %}

disable_mlock    = "True"
{% if vault_config.tls_disable == True %}
api_addr         = "http://{{ ansible_fqdn }}:{{ vault_config.http_port }}"
cluster_addr     = "http://{{ ansible_fqdn }}:{{ vault_config.api_port }}"
{% else %}
api_addr         = "https://{{ ansible_fqdn }}:{{ vault_config.http_port }}"
cluster_addr     = "https://{{ ansible_fqdn }}:{{ vault_config.api_port }}"
{% endif %}
ui               = "{{ vault_config.ui }}"